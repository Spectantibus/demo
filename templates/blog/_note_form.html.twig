
{{ form_start(form, {method: 'POST', action: path('note_new', {'postSlug': post.slug})}) }}


<fieldset>
    <legend>
        <i class="fa fa-star" aria-hidden="true"></i>
        {% if note is defined %}
            Changer votre note
        {% else %}
            mettre une note
        {% endif %}
    </legend>

    {{ form_errors(form) }}

    <div class="form-group {% if not form.value.vars.valid %}has-error{% endif %}">
        {{ form_label(form.value, 'label.value', {label_attr: {class: 'hidden'}}) }}

        {{ form_errors(form.value) }}

        {{ form_widget(form.value, {attr: {rows: 10, class: 'rating'}}) }}
    </div>

    <div class="form-group">
        <button class="btn btn-primary pull-right" type="submit">
            <i class="fa fa-paper-plane" aria-hidden="true"></i> Envoyer
        </button>
    </div>
</fieldset>
{{ form_end(form) }}
